# VLines Weekly Reports Automation - Environment Variables
# Copy this file to .env and fill in your actual values

# Data Source Configuration
DATA_SOURCE_TYPE=json
API_URL=http://localhost:3001/api/weekly-reports/data

# Database Configuration (if using database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vlines_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Email Notification (if enabled)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=reports@vlines.com
SMTP_PASSWORD=your_email_password_here
EMAIL_RECIPIENTS=manager@vlines.com,team@vlines.com

# Slack Notification (if enabled)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Output Configuration
OUTPUT_DIRECTORY=./reports
TEMPLATE_PATH=./templates/weekly_report_template.pptx

# Scheduling
SCHEDULE_DAY=monday
SCHEDULE_TIME=09:00

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/reports_automation.log
